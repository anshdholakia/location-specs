{
  "name": "Location Specs",
  "description": "Fetches News related to a location on Google Maps",
  "version": "0.1.0",
  "host_permissions":["https://*.google.com/maps/*"],
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": ["https://*.google.com/maps/*"],
      "js": ["content.js"]
    }
  ],
  "background":{"service_worker": "background.js"},
  "permissions": ["storage", "tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/logo.png",
      "32": "images/logo.png",
      "48": "images/logo.png",
      "128": "images/logo.png"
    }
  },
  "icons": {
    "16": "images/logo.png",
    "32": "images/logo.png",
    "48": "images/logo.png",
    "128": "images/logo.png"
  },
  "options_page": "options.html"
}
